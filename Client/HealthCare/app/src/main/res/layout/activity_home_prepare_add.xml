<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:padding="20dp"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="닉네임 : "/>

        <EditText
            android:id="@+id/et_home_prepare_add_nickname"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="이름 : "/>

        <EditText
            android:id="@+id/et_home_prepare_add_name"
            android:layout_width="100dp"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="생년월일 : "/>

<!--        <Spinner-->
<!--            android:id="@+id/spn_home_prepare_add_year"-->
<!--            android:layout_width="110dp"-->
<!--            android:layout_height="wrap_content"/>-->

<!--        <Spinner-->
<!--            android:id="@+id/spn_home_prepare_add_month"-->
<!--            android:layout_width="90dp"-->
<!--            android:layout_height="wrap_content"/>-->

<!--        <Spinner-->
<!--            android:id="@+id/spn_home_prepare_add_day"-->
<!--            android:layout_width="90dp"-->
<!--            android:layout_height="wrap_content"/>-->
        <EditText
            android:id="@+id/et_home_prepare_add_year"
            android:layout_width="110dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/et_home_prepare_add_month"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"/>

        <EditText
            android:id="@+id/et_home_prepare_add_day"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"/>



    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="아이콘 선택"/>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp">

        <ImageButton
            android:id="@+id/iv_man1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_man1"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_man2"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/iv_man2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_man2"
            app:layout_constraintLeft_toRightOf="@id/iv_man1"
            app:layout_constraintRight_toLeftOf="@id/iv_man3"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/iv_man3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_man3"
            app:layout_constraintLeft_toRightOf="@id/iv_man2"
            app:layout_constraintRight_toLeftOf="@id/iv_woman1"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/iv_woman1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_woman1"
            app:layout_constraintLeft_toRightOf="@id/iv_man3"
            app:layout_constraintRight_toLeftOf="@id/iv_woman2"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/iv_woman2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_woman2"
            app:layout_constraintLeft_toRightOf="@id/iv_woman1"
            app:layout_constraintRight_toLeftOf="@id/iv_woman3"
            app:layout_constraintTop_toTopOf="parent"/>

        <ImageButton
            android:id="@+id/iv_woman3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:background="@drawable/icon_woman3"
            app:layout_constraintLeft_toRightOf="@id/iv_woman2"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="선택된 아이콘"/>

        <ImageView
            android:id="@+id/iv_home_prepare_add_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"/>
    </LinearLayout>

    <Button
        android:id="@+id/btn_home_prepare_add_save"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="추가"/>



</LinearLayout>