<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">

        <ImageView
            android:id="@+id/iv_home_prepare_1"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toLeftOf="@id/iv_home_prepare_2"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#eeeeee"/>

        <TextView
            android:id="@+id/tv_home_prepare_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/iv_home_prepare_1"
            app:layout_constraintRight_toRightOf="@id/iv_home_prepare_1"
            app:layout_constraintTop_toBottomOf="@id/iv_home_prepare_1"
            android:text="nickname"/>

        <ImageView
            android:id="@+id/iv_home_prepare_2"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toRightOf="@id/iv_home_prepare_1"
            app:layout_constraintRight_toLeftOf="@id/iv_home_prepare_3"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#eeeeee"/>

        <TextView
            android:id="@+id/tv_home_prepare_2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/iv_home_prepare_2"
            app:layout_constraintRight_toRightOf="@id/iv_home_prepare_2"
            app:layout_constraintTop_toBottomOf="@id/iv_home_prepare_2"
            android:text="nickname"/>

        <ImageView
            android:id="@+id/iv_home_prepare_3"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toRightOf="@id/iv_home_prepare_2"
            app:layout_constraintRight_toLeftOf="@id/iv_home_prepare_4"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#eeeeee"/>

        <TextView
            android:id="@+id/tv_home_prepare_3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/iv_home_prepare_3"
            app:layout_constraintRight_toRightOf="@id/iv_home_prepare_3"
            app:layout_constraintTop_toBottomOf="@id/iv_home_prepare_3"
            android:text="nickname"/>

        <ImageView
            android:id="@+id/iv_home_prepare_4"
            android:layout_width="60dp"
            android:layout_height="60dp"
            app:layout_constraintLeft_toRightOf="@id/iv_home_prepare_3"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            android:background="#eeeeee"/>

        <TextView
            android:id="@+id/tv_home_prepare_4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:layout_constraintLeft_toLeftOf="@id/iv_home_prepare_4"
            app:layout_constraintRight_toRightOf="@id/iv_home_prepare_4"
            app:layout_constraintTop_toBottomOf="@id/iv_home_prepare_4"
            android:text="nickname"/>



</androidx.constraintlayout.widget.ConstraintLayout>